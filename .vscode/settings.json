{
  "editor.minimap.enabled": false,
  "files.autoSave": "afterDelay",
  "editor.multiCursorModifier": "alt",
  "emmet.includeLanguages": {
      "typescript": "html",
      "javascript": "javascriptreact"
  },
  "terminal.integrated.sendKeybindingsToShell": true,
  "git.autofetch": true,
  "local-history.saveDelay": 300,
  "terminal.integrated.fontFamily": "monospace",
  "editor.wordWrap": "bounded",
  "launch": {
      "configurations": []
  },
  "window.autoDetectColorScheme": true,
  "editor.fontVariations": true,
  "[css]": {},
  "[javascriptreact]": {},
  "editor.semanticHighlighting.enabled": true,
  "[javascript]": {},
  "editor.linkedEditing": true,
  "[html]": {},
  "workbench.tree.renderIndentGuides": "onHover",
  "[json]": {},
  "editor.stickyScroll.enabled": true,

"editor.tokenColorCustomizations": {
	"textMateRules": [
		{
			"scope": [
				"comment",
				"keyword.control.import.js", // import
				"keyword.control.export.js", // export
				"keyword.control.from.js", // from
			    "constant", // String, Number, Booleanâ€¦, this, super
				"storage.modifier", // static keyword
				"storage.type.class", // class keyword
				"storage.type.php", // typehints in methods keyword
				"keyword.other.new.php", // new
				"entity.other.attribute-name", // html attributes
				"fenced_code.block.language.markdown" // markdown language modifier
			],
			"settings": {
				"fontStyle": "italic"
			}
		},
		{
			"scope": [
				"entity.name.type.class" // class names
			],
			"settings": {
				"fontStyle": "bold"
			}
		},
		{
			"scope": [
				"entity.name.section.markdown" // markdown headlines
			],
			"settings": {
				"fontStyle": "italic bold"
			}
		},
		{
			"scope": [
				"invalid",
				"keyword.operator",
				"constant.numeric.css",
				"keyword.other.unit.px.css",
				"constant.numeric.decimal.js",
				"constant.numeric.json",
				"comment.block",
				"entity.other.attribute-name.class.css"
			],
			"settings": {
				"fontStyle": ""
			}
		}
	]
},
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "workbench.iconTheme": "material-icon-theme",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.renderWhitespace": "none",
  "github.copilot.enable": {
      "*": true,
      "plaintext": false,
      "markdown": false,
      "scminput": false
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "[typescript]": {},
  "workbench.sideBar.location": "right",
  "editor.codeActionsOnSave": {
  "source.organizeImports": "always"
  },
  "workbench.colorTheme": "Gruvbox Material Light",
  "workbench.preferredDarkColorTheme": "Gruvbox Material Dark",
  "workbench.preferredLightColorTheme": "Gruvbox Material Light",
  "editor.mouseWheelZoom": true,
  "editor.cursorStyle": "underline",
  "editor.cursorBlinking": "phase",
  "editor.letterSpacing": 0,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.inlayHints.padding": true,

  // ebnable antialiasing in glsl canvas
  "glsl-canvas.refreshOnChange": false,
  "webgl-glsl-editor.format.placeSpaceAfterKeywords": true,
  "[glsl]": {
      "editor.defaultFormatter": "raczzalan.webgl-glsl-editor"
  },
  "[frag]": {
      "editor.defaultFormatter": "raczzalan.webgl-glsl-editor"
  },
  // "[vert]": {
  //     "editor.defaultFormatter": "raczzalam.webgl-glsl-editor"
  // },
  "[java]": {
      "editor.defaultFormatter": "redhat.java"
  },
  "editor.inlayHints.enabled": "offUnlessPressed",
  "typescript.validate.enable": true,
  "[jsonc]": {
      "editor.defaultFormatter": "vscode.json-language-features"
  },

  "explorer.compactFolders": false,
  "editor.colorDecoratorsActivatedOn": "click",
  "workbench.editor.tabCloseButton": "left",
  "workbench.editor.wrapTabs": true,
  "editor.tabSize": 2,
  "gitlens.hovers.annotations.over": "annotation",
  "editor.accessibilitySupport": "off",
  "editor.indentSize": "tabSize",
  "errorLens.fontStyleItalic": true,
  "workbench.layoutControl.type": "menu",
  "terminal.integrated.shellIntegration.enabled": false,
  "editor.fontSize": 15.5,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "accessibility.hideAccessibleView": true,
  "editor.fontFamily": "'Fira Code iScript', 'Fira Code'",
  "editor.fontLigatures": "'calt', 'ss01'",
  "tailwindCSS.emmetCompletions": true,
  "editor.lineHeight": 1.3,

  "gruvboxMaterial.highContrast": true,
  "gruvboxMaterial.darkCursor": "green",
  "gruvboxMaterial.darkSelection": "green",
  "gruvboxMaterial.lightSelection": "green",
  "gruvboxMaterial.darkPalette": "mix",
  "gruvboxMaterial.lightPalette": "mix",
  "gruvboxMaterial.darkWorkbench": "flat",
  "gruvboxMaterial.lightWorkbench": "flat",
  "gruvboxMaterial.darkContrast": "hard",
  "gruvboxMaterial.lightContrast": "hard",
  "gruvboxMaterial.diagnosticTextBackgroundOpacity": "50%",
  "gruvboxMaterial.italicKeywords": true,
"gruvboxMaterial.italicComments": true,
"workbench.editor.tabActionLocation": "left",

}